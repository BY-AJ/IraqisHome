<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_tabpro_icon"
            android:scaleType="fitXY"
            android:background="@drawable/x_bg"
            android:layout_width="match_parent"
            android:layout_height="160dp" />
        <TextView
            android:id="@+id/tv_tabpro_name"
            android:text="全棉四件套"
            android:layout_below="@+id/iv_tabpro_icon"
            android:textColor="#cc000000"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/tv_tabpro_name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_tavpro_flag"
                android:text="新品优惠券"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#ffff00"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_tabpro_flag_price"
                android:layout_marginLeft="10dp"
                android:text="￥ 35"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_tabpro_sale_price"
                android:layout_marginLeft="10dp"
                android:text="￥ 39"
                android:layout_centerVertical="true"
                android:textColor="#88000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_tabpro_pricetag"
                android:text="新"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#ffffff"
                android:background="#ff0000"
                android:layout_marginLeft="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tv_tabpro_comment"
                android:text="评论: 0"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="60dp"
                android:textColor="#8c8c8c"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>