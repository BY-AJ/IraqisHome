<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_shop_icon"
        android:background="@drawable/work_bg"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_shop_title"
        android:layout_below="@+id/iv_shop_icon"
        android:text="家务工具"
        android:textSize="12sp"
        android:singleLine="true"
        android:textColor="#cc080808"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_shop_price"
        android:text="￥9"
        android:textColor="#cc000000"
        android:layout_below="@+id/tv_shop_title"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>