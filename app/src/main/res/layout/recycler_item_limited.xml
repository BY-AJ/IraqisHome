<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shape_limited_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_limited_pic"
            android:background="@drawable/limited_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="190dp" />
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_below="@+id/iv_limited_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_limited_title"
                android:text="家务工具"
                android:textColor="#cc080808"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_limited_price"
                android:text="￥9"
                android:textColor="#cc000000"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>